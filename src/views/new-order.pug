extends layouts/default

block vars
  -
    const page = {
      title: 'new order',
      order: 1,
      isAuth: true
    };




block main
  .main__content
    include partials/_topbar

    .page
      .container.page__container
        .page__title
          h1.page__title-h1 Заказать курьерскую доставку


        .mini-content.mini-content--large-width
          form
            .white-block
              .form-style.form-style--wide
                .form-style__label.form-style__label--large Откуда
                .form-style__row
                  .form-style__col.form-style__col--wide
                    .input-block.input-block--address
                      a.input-block__map(href="#")
                        img(src="img/map-thumb.svg", width="38", height="38", alt="")
                      label
                        input(type="text" name="" required="required")
                        span.input-block__placeholder Адрес отправки
                
                .form-style__row
                  .form-style__col.form-style__col--small
                    label.input-block
                      input(type="number" name="" required="required")
                      span.input-block__placeholder Подъезд
                  .form-style__col.form-style__col--small
                    label.input-block
                      input(type="nember" name="" required="required")
                      span.input-block__placeholder Этаж
                  .form-style__col.form-style__col--small
                    label.input-block
                      input(type="text" name="" required="required")
                      span.input-block__placeholder Кв/офис
                  .form-style__col.form-style__col--auto
                    label.input-block
                      input(type="text" name="" required="required")
                      span.input-block__placeholder Комментарий к адресу
                .form-style__row
                  .form-style__col.form-style__col--wide
                    label.input-block
                      textarea(type="text" name="" required="required")
                      span.input-block__placeholder Поручение для курьера
                
                .form-style__row
                  .form-style__col.form-style__col--third-width
                    label.input-block
                      input.mask-phone(type="tel" name="" required="required")
                      span.input-block__placeholder Контактный телефон

                  .form-style__col.form-style__col--auto
                    label.input-block
                      input(type="text" name="" required="required")
                      span.input-block__placeholder Контактное лицо

                .form-style__row
                  .form-style__col.form-style__col--day
                    select.js-select(name="deliveryDate")
                      option(value="today") Сегодня
                      option(value="tomorrow") Завтра
                  .form-style__col.form-style__col--time
                    .timeselect
                      .timeselect__before c
                      select.js-select(name="deliveryTimeStart")
                        option(value="9") 9:00
                        option(value="10") 10:00
                  .form-style__col.form-style__col--time
                    .timeselect
                      .timeselect__before до
                      select.js-select(name="deliveryTimeEnd")
                        option(value="17") 17:00
                        option(value="18") 18:00
                  
                  .form-style__col.form-style__col--auto 
                    .courier-time
                      span.courier-time__icon
                        svg(width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                          path(fill-rule="evenodd" clip-rule="evenodd" d="M16.875 2.25a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-7.02 1.18a1.125 1.125 0 0 0-.97.132L6.128 5.384A1.125 1.125 0 1 0 7.37 7.261l2.3-1.523 1.066.35-2.034 3.151c-.02.032-.04.065-.057.098l-1.273 2.492-2.624-.596a1.125 1.125 0 0 0-.498 2.194l3.477.79a1.125 1.125 0 0 0 1.251-.585l1.049-2.053.685.54-1.108 4.395a1.125 1.125 0 0 0 2.131.722l1.364-5.148c.153-.452.005-.95-.37-1.245l-1.581-1.244 1.509-2.337.793 1.225c.208.32.563.513.944.513h2.48a1.125 1.125 0 0 0 0-2.25h-1.868l-1.125-1.737a1.125 1.125 0 0 0-.594-.457L9.855 3.43ZM2.25 7.876a1.125 1.125 0 0 0 0 2.25h1.687a1.125 1.125 0 1 0 0-2.25H2.25ZM0 5.625C0 5.004.504 4.5 1.125 4.5h1.687a1.125 1.125 0 0 1 0 2.25H1.125A1.125 1.125 0 0 1 0 5.625Zm3.375-4.5a1.125 1.125 0 1 0 0 2.25h1.687a1.125 1.125 0 1 0 0-2.25H3.375Z" fill="#00C2FF")
                      span.courier-time__text Курьер будет с <b>15:00</b> до <b>17:00</b>
                    
                
                //-.form-style__row
                  .form-style__col
                    label.input-block
                      input.mask-vin(type="text" name="" required="required" data-group="id")
                      span.input-block__placeholder VIN номер
                  .form-style__sep или
                  .form-style__col
                    label.input-block
                      input(type="text" name="" required="required" data-group="id")
                      span.input-block__placeholder Model Frame
                    .form-style__help
                      span ?
                      .form-style__help-text
                        p Какой то текст. Сдесь могла быть ваша реклама
                
                //-.form-style__row
                  .form-style__col.form-style__col--text
                    .form-style__text Стоимость подбора оригинального номера одной детали + 2 аналога составляет: 10 q

                //-.form-style__label Выберите способ для связи
                //-.form-style__row
                  .form-style__col
                    select.js-contact-select(name="contact_type")
                      option(value="WhatsApp" data-img="soc-wa.svg") WhatsApp
                      option(value="Телефон" data-img="soc-wa.svg") Телефон
                      option(value="Viber" data-img="soc-wa.svg") Viber

                  .form-style__col
                    label.input-block
                      input.mask-phone(type="text" name="" required="required")
                      span.input-block__placeholder Контактный телефон
                //-.form-style__row
                  .form-style__col.form-style__col--text
                    .form-style__text Вся информация по деталям будет направлена Вам сообщением в чат на указанный номер телефона.
            
            
            .white-block
              .form-style.form-style--wide
                .form-style__label.form-style__label--large Куда
                .form-style__row
                  .form-style__col.form-style__col--wide
                    .input-block.input-block--address
                      a.input-block__map(href="#")
